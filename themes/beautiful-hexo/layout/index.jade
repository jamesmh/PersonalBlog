extends partial/base

block header
    include partial/index-header

block content
    div(class="container", role="main")
        if page.current === 1
            h3.text-center(style='margin-bottom:40px;')!=theme.ad.title       
            .row
                .col-lg-8.col-lg-offset-2.col-md-10.col-md-offset-1
                    .who-am-I                                     
                        p!=theme.ad.text
                        div.text-center
                            a(href!=theme.ad.signUpRef)
                                button.btn.btn-sign-up!=theme.ad.signUp

                //- h1.text-center(style='margin-bottom:40px;')!=theme.who.title       
